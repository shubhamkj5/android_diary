<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.analogyc.wordiary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8"
 				android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:enabled="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.NoTitle" >
        <activity
            android:name="net.analogyc.wordiary.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.analogyc.wordiary.EntryActivity"
            android:label="@string/title_activity_entry" >
        </activity>
        <activity
            android:name="net.analogyc.wordiary.MoodsActivity"
            android:theme="@android:style/Theme.Dialog"
            android:label="@string/title_activity_mood"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name="net.analogyc.wordiary.PreferencesActivity"
            android:theme="@style/Theme.Default"
            android:label="@string/preferences" >
        </activity>
        <activity
            android:name="net.analogyc.wordiary.ImageActivity"
            android:label="@string/title_activity_image" >
        </activity>
        <activity android:name="net.analogyc.wordiary.BaseActivity" />
        <activity
            android:name="net.analogyc.wordiary.GalleryActivity"
            android:label="@string/title_activity_gallery" >
        </activity>
    </application>

</manifest>